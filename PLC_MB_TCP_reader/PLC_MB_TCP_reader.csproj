<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Authors>@Lev</Authors>
    <PackageIcon>none</PackageIcon>
    <AssemblyVersion>1.0</AssemblyVersion>
    <FileVersion>1.0</FileVersion>
    <ProduceReferenceAssembly>True</ProduceReferenceAssembly>
    <SignAssembly>False</SignAssembly>
    <Company>@Lev</Company>
    <Description>PLC monitor</Description>
    <Copyright>@Lev</Copyright>
    <NeutralLanguage>ru</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="EasyModbus">
      <HintPath>..\XML_app\EasyModbus.dll</HintPath>
    </Reference>
    <Reference Include="System.IO.Ports">
      <HintPath>..\OpenPLC\bin\Debug\net6.0\System.IO.Ports.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="Logo_round_xxx.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>